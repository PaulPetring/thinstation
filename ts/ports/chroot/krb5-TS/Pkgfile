# Description:	Network Authentication Protocol
# URL:	http://web.mit.edu/kerberos
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)
# Depends on:	

name=krb5-TS
pname=${name%-*}
version=1.12.1
release=1
source=(http://web.mit.edu/kerberos/dist/krb5/${version%.*}/krb5-$version-signed.tar)

build() {
	tar -xf $SRC/$pname-$version-signed.tar
	tar -xzf $SRC/$pname-$version.tar.gz
    	cd $pname-$version/src
    	CFLAGS="-I/usr/include/et" ./configure --prefix=/usr --mandir=/usr/man --with-system-et --with-system-ss --with-ldap --without-system-verto --enable-dns-for-realm

	make
    	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share
}
