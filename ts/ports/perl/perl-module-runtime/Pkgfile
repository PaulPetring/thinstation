name=perl-module-runtime
version=0.014
release=1
source=(http://search.cpan.org/CPAN/authors/id/Z/ZE/ZEFRAM/Module-Runtime-0.014.tar.gz)

build() {
        cd Module-Runtime-$version

        unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
        export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps

        echo no | perl Makefile.PL

        make OPTIMIZE="$CFLAGS"
        make INSTALLDIRS=vendor DESTDIR=$PKG install

#        /usr/bin/perl Build.PL
#        ./Build
#        ./Build install installdirs=vendor destdir=


        find $PKG -type f \( \
                -name '.packlist' -or \
                -name '*.bs' -or \
                -name 'autosplit.ix' -or \
                -name 'perllocal.pod' \) -delete

        find $PKG -depth -empty -exec rm -r {} \;
}

